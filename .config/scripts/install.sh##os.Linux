if [[ "$OSTYPE" == "linux-gnu"* ]]; then
  if command -v apt &> /dev/null; then
    sudo apt update
    sudo apt install -y python3 python3-pip ansible
  else
    echo "This script is designed for Ubuntu-based systems using apt."
    exit 1
  fi
else
  echo "This script is designed for Linux systems."
  exit 1
fi
